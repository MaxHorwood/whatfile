{
	"name": "whatfile",
	"displayName": "WhatFile",
	"description": "Writes the most recently edited file to a specified file.",
	"version": "0.0.1",
	"publisher": "MaxHorwood",
	"repository": {
		"type": "git",
		"url": "https://github.com/MaxHorwood/whatfile.git"
	},
	"engines": {
		"vscode": "^1.34.0"
	},
	"activationEvents": [
		"*"
	],	
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "What File",
				"properties": {
					"whatFile.fileLocation": {
						"type": "string",
						"description": "Location to write too",
						"scope": "window"
					},
					"whatFile.enabled": {
						"type": "boolean",
						"description": "Enables extension",
						"scope": "window"
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
